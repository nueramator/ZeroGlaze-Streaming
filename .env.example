# ==================================
# ZEROGLAZE ENVIRONMENT VARIABLES
# ==================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ----------------------------------
# Application Configuration
# ----------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Zeroglaze

# ----------------------------------
# Solana Blockchain Configuration
# ----------------------------------
# Devnet RPC (Free - for development)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# Mainnet RPC (Use Helius/QuickNode for production)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Network (devnet, testnet, mainnet-beta)
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Deployed Program IDs (fill after deployment)
NEXT_PUBLIC_TOKEN_LAUNCHPAD_PROGRAM_ID=
NEXT_PUBLIC_TRADING_PROGRAM_ID=
NEXT_PUBLIC_FEE_DISTRIBUTION_PROGRAM_ID=

# Platform wallet for collecting fees
PLATFORM_WALLET_ADDRESS=
# WARNING: Never expose private keys in frontend code!
PLATFORM_WALLET_PRIVATE_KEY=

# ----------------------------------
# Helius (Enhanced Solana RPC - Optional)
# ----------------------------------
# Get free API key at: https://helius.dev
HELIUS_API_KEY=
NEXT_PUBLIC_HELIUS_RPC_URL=https://devnet.helius-rpc.com/?api-key=

# ----------------------------------
# Supabase Database Configuration
# ----------------------------------
# âœ… Managed via Supabase MCP Plugin
# No credentials needed in .env - authentication handled by MCP

# ----------------------------------
# Twitch API Configuration
# ----------------------------------
# Register your app at: https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
TWITCH_REDIRECT_URI=http://localhost:3000/api/auth/twitch/callback

# Twitch webhook secret (for EventSub)
TWITCH_WEBHOOK_SECRET=your-random-secret-string

# ----------------------------------
# YouTube Live API (Future Integration)
# ----------------------------------
# YOUTUBE_API_KEY=
# YOUTUBE_CLIENT_ID=
# YOUTUBE_CLIENT_SECRET=

# ----------------------------------
# Kick API (Future Integration)
# ----------------------------------
# KICK_API_KEY=

# ----------------------------------
# Security & Authentication
# ----------------------------------
# Generate a random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ----------------------------------
# Trading & Bonding Curve Configuration
# ----------------------------------
# Platform fee percentage (e.g., 1.0 = 1%)
PLATFORM_FEE_PERCENTAGE=1.0
# Creator fee percentage when streaming (e.g., 2.0 = 2%)
CREATOR_FEE_PERCENTAGE_LIVE=2.0
# Creator fee percentage when offline (e.g., 0.2 = 0.2%)
CREATOR_FEE_PERCENTAGE_OFFLINE=0.2

# Bonding curve parameters
INITIAL_TOKEN_SUPPLY=1000000000
BONDING_CURVE_SLOPE=0.0001

# ----------------------------------
# Monitoring & Analytics (Optional)
# ----------------------------------
# Error tracking with Sentry
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=
# VERCEL_ANALYTICS_ID=

# ----------------------------------
# CORS & Security
# ----------------------------------
ALLOWED_ORIGINS=http://localhost:3000,https://zeroglaze.com

# ----------------------------------
# File Upload (Future Feature)
# ----------------------------------
# Cloudinary for token thumbnails
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Or use Supabase Storage (managed via MCP plugin)
# Storage operations handled through Supabase MCP

# ----------------------------------
# Development Tools
# ----------------------------------
# Enable debug mode
DEBUG=false
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ----------------------------------
# Webhook URLs
# ----------------------------------
# Public URL for webhooks (use ngrok for local dev)
NEXT_PUBLIC_WEBHOOK_URL=https://your-domain.com/api/webhook
