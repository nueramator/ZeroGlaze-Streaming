# Environment Configuration for Zeroglaze MVP

# ============================================================================
# Supabase Configuration
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# Solana Configuration
# ============================================================================
# RPC Endpoint (use Helius, QuickNode, or public endpoint)
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com
# For Helius: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Network (devnet, testnet, mainnet-beta)
SOLANA_NETWORK=devnet

# Platform fee wallet (receives 1% platform fees)
PLATFORM_FEE_WALLET=YourPlatformFeeWalletPublicKey

# Authority keypair for updating stream status (JSON array format)
# Generate with: solana-keygen new --no-bip39-passphrase
AUTHORITY_KEYPAIR='[1,2,3,...]'

# Program ID (deployed Anchor program)
NEXT_PUBLIC_PROGRAM_ID=ZERO11111111111111111111111111111111111111111

# ============================================================================
# Twitch Integration
# ============================================================================
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Webhook callback URL (your domain)
TWITCH_WEBHOOK_CALLBACK=https://yourdomain.com/api/webhook/stream-status

# ============================================================================
# YouTube Integration (Optional for MVP)
# ============================================================================
YOUTUBE_API_KEY=your_youtube_api_key

# ============================================================================
# Security
# ============================================================================
# Webhook secret for verifying incoming webhooks
WEBHOOK_SECRET=generate-a-random-secret-here

# JWT secret for API authentication (if needed)
JWT_SECRET=generate-a-random-jwt-secret

# ============================================================================
# Application
# ============================================================================
# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# Monitoring & Analytics (Optional)
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_TWITCH_WEBHOOKS=true
ENABLE_YOUTUBE_INTEGRATION=false
ENABLE_CREATOR_VERIFICATION=true
ENABLE_RATE_LIMITING=true
